<body>

	<h1 align="center">Login</h1>
	<hr>

	<% if(message) { %>
		<h3 name="error" align="center" id="error"> <%= message %> </h3>
	<% } %>
		<h3 name="emailmessage" align="center" id="emailmessage" hidden=""></h2>
		<form name="login" id="login" align="center" method="post" action="/login">
			Email-id <input id="email" type="text" name="email" style="margin: 20px" >
			<br>
			Password <input id="password" type="text" name="password" style="margin: 20px" >
			<br>

			<button type="button" class="btn btn-link" id="checkemail" onclick="checkusername('mail')">Resend confirmation mail</button>
			<button type="button" class="btn btn-link" id="forgotpassword" onclick="checkusername('password')" >Forgot password?</button>
			<button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false" id="passwordModal"></button>
			 <br>
					
			<button type="button" id="validate" onclick="login_valid()" style="margin: 20px ">Submit</button>
			<button type="Submit" id="submit" hidden></button> <br><br>			
		</form>

	
	  <!--<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
	    Open modal
	  </button>-->

	  <!-- The Modal -->
	  <div class="modal fade" id="myModal">
	    <div class="modal-dialog modal-dialog-centered">
	      <div class="modal-content">
	      
	        <!-- Modal Header -->
	        <div class="modal-header" >
	          <div class="modal-title" id="modalMessage" align="center"></div>
	          <button type="button" class="close" data-dismiss="modal">&times;</button>
	        </div>
	        
	        <!-- Modal body -->
	        <div class="modal-body" id="OTPbody">
	          <div style="margin-left: 20px">Enter OPT   : <input type="text" name="OTP" id="OTP" style="margin-left: 10px"></div> <br>
	          <div align="center"><button type="button" id="OTPsubmit" align="center">Submit</button> </div>
	        </div>

	        <div class="modal-body" id="passwordbody" hidden="">
	          
	          <div style="margin-left: 10px">Enter New Password : <input type="text" name="newpassword" id="newpassword" style="margin-left: 10px"></div> <br>
	          <div style="margin-left: 10px">Confirm Password : <input type="text" name="confirmpassword" id="confirmpassword" style="margin-left: 10px"></div> <br>
	          <div align="center"><button type="button" id="passwordvalidate" align="center">Submit</button> </div>
	        </div>
	        
	        <!-- Modal footer -->
	        <!--<div class="modal-footer">
	          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
	        </div>-->
	        
	      </div>
	    </div>
	  </div>
</body>
</html>